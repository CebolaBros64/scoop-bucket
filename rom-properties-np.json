{
    "version": "1.9",
    "description": "ROM Properties Page shell extension",
    "homepage": "https://github.com/GerbilSoft/rom-properties",
    "license": "GPL-2.0",
    "url": "https://github.com/GerbilSoft/rom-properties/releases/download/v1.9/rom-properties_1.9-windows.zip",
    "pre_install": [
        "if (!(is_admin)) {",
        "    error \"Administrator rights are required to install $app.\"",
        "    exit 1",
        "}"
    ],
	"installer": {
        "script": [
            "if ($architecture -eq '64bit') {",
            "    regsvr32 /s \"$dir\\amd64\\rom-properties.dll\"",
            "}",
			"",
			"regsvr32 /s \"$dir\\i386\\rom-properties.dll\"",
			"Stop-Process -Name explorer"
        ]
    },
    "uninstaller": {
        "script": [
		    "if (!(is_admin)) {",
            "    error \"Administrator rights are required to uninstall $app.\"",
            "    exit 1",
            "}",
            "",
            "",
            "$code = @'",
            "[DllImport('user32.dll', EntryPoint = 'PostMessage', CharSet =  CharSet.Unicode)] public static extern IntPtr PostMessage(IntPtr hWnd, int Msg, uint wParam, string lParam);",
            "[DllImport('user32.dll', EntryPoint = 'FindWindowW', CharSet = CharSet.Unicode)] public static extern IntPtr FindWindow(string lpClassName, string lpWindowName);",
            "'@",
            "",
            "$myAPI = Add-Type -MemberDefinition $code -Name myAPI -PassThru",
            "$myAPI::PostMessage($myAPI::FindWindow('Shell_TrayWnd', $Null),1460,0,0)",
            "",
            "Start-Sleep -Seconds 10",
            "",
            "",
            "if ($architecture -eq '64bit') {",
            "    regsvr32 /u /s \"$dir\\amd64\\rom-properties.dll\"",
            "}",
			"regsvr32 /u /s \"$dir\\i386\\rom-properties.dll\"",
			"explorer"
        ]
    },
    "architecture": {
        "64bit": {
            "bin": [
                "rpcli.exe",
                "rp-config.exe",
                "amd64/rp-download.exe"
            ]
        },
        "32bit": {
            "bin": [
                "rpcli.exe",
                "rp-config.exe",
                "i386/rp-download.exe"
            ]
        }
    },
    "checkver": {
        "github": "https://github.com/GerbilSoft/rom-properties/"
    },
    "autoupdate": "https://github.com/GerbilSoft/rom-properties/releases/download/v$version/rom-properties_$version-windows.zip"
}